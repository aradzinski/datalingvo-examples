{
    "id": "dl.weather.ex",
    "name": "Weather Example Model",
    "version": "1.0",
    "metadata": {
        "DESCRIPTION": "Weather example model.",
        "VENDOR_NAME": "DataLingvo, Inc",
        "VENDOR_URL": "https://www.datalingvo.com",
        "VENDOR_CONTACT": "Support",
        "VENDOR_EMAIL": "info@datalingvo.com",
        "DOCS_URL": "https://www.datalingvo.com",
        "MAX_GEO_TOKENS": 1,
        "MAX_DATE_TOKENS": 1
    },
    "examples": [
        "What's the local weather forecast?",
        "What's the weather in Moscow?"
    ],
    "macros": [
        {
            "name": "<OF>",
            "macro": "{of|for|per}"
        },
        {
            "name": "<CUR>",
            "macro": "{current|present|moment|now}"
        },
        {
            "name": "<WEATHER>", /* Note the often misspelling in the synonyms. */
            "macro": "{weather {condition|temp|tempreture|temperature|data|*}|condition|temp|tempreture|temperature}"
        },
        {
            "name": "<FORECAST>",
            "macro": "{forecast|prognosis|prediction}"
        },
        {
            "name": "<HISTORY>",
            "macro": "{history|past}"
        }
    ],
    "elements": [
        {
            "id": "wt:hist",
            "group": "default",
            "type": "STRING",
            "synonyms": [
                "{<WEATHER>|*} <HISTORY>",
                "<HISTORY> {<OF>|*} <WEATHER>"
            ],
            "metadata": {
                "DESCRIPTION": "Past weather conditions."
            }
        },
        {
            "id": "wt:curr",
            "group": "default",
            "type": "STRING",
            "synonyms": [
                "{<CUR>|*} <WEATHER>"
            ],
            "metadata": {
                "DESCRIPTION": "Current weather conditions."
            }
        },
        {
            "id": "wt:fcast",
            "group": "default",
            "type": "STRING",
            "synonyms": [
                "{<WEATHER>|*} <FORECAST>",
                "<FORECAST> {<OF>|*} <WEATHER>"
            ],
            "metadata": {
                "DESCRIPTION": "Future weather forecast."
            }
        }
    ],
    "defaultTrivia": "true"
}