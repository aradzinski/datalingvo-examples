        },
        {
            "id": "ctrl:subject",
            "description": "Object to control.",
            "group": "subject",
            "synonyms": [
                "{`JJ`|`JJR`|`JJS`|`VBG`|*} {`NN`|`NNS`|`NNP`|`NNPS`}"
