{
    "id": "dl.time.ex",
    "name": "Time Example Model",
    "version": "1.0",
    "metadata": {
        "DESCRIPTION": "Time example model.",
        "VENDOR_NAME": "DataLingvo, Inc",
        "VENDOR_URL": "https://www.datalingvo.com",
        "VENDOR_CONTACT": "Support",
        "VENDOR_EMAIL": "info@datalingvo.com",
        "DOCS_URL": "https://www.datalingvo.com"
    },
    "examples": [
        "Current time in London?",
        "What time is it now in Moscow?",
        "What about Mumbai?",
        "What's the local time?"
    ],
    "macros": [
        {
            "name": "<OF>",
            "macro": "{of|for|per}"
        },
        {
            "name": "<CUR>",
            "macro": "{current|present|now|local}"
        },
        {
            "name": "<TIME>",
            "macro": "{time <OF> day|day time|date|time|moment|datetime|hour|o'clock|clock|date time|date and time|time and date}"
        }
     ],
    "elements": [
        {
            "id": "x:time",
            "synonyms": [
                "{<CUR>|*} <TIME>"
            ],
            "metadata": {
                "DESCRIPTION": "Date and/or time token indicator."
            }
        }
    ],
    "defaultTrivia": "true",
    "trivia": [
        {
            "inputs": [
                "{are|r} {you|u} ready"
            ],
            "responses": [
                "Ready.",
                "I am always ready.",
                "Sure."
            ]
        }
    ],
    "additionalStopwords": [
        "wow", "cool"
    ],
    "excludedStopwords": [

    ],
    "suspiciousWords": [
        "dog", "cat"
    ]
}